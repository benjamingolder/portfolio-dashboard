# Azure AD App Registration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# SharePoint Configuration
SHAREPOINT_SITE_ID=your-site-id
SHAREPOINT_FOLDER_PATH=/Shared Documents/Portfolios

# Sync interval in seconds (default: 300 = 5 minutes)
SYNC_INTERVAL=300

# Base currency for aggregation
BASE_CURRENCY=CHF

# CloudFlare Access (for external access via CloudFlare Tunnel)
CF_ACCESS_ENABLED=false
CF_ACCESS_TEAM_DOMAIN=your-team-name
CF_ACCESS_AUD=your-audience-tag-from-access-policy
